<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0d2639"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="5dp"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:orientation="vertical"
        android:paddingTop="60dp"
        android:weightSum="5">


        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="-40dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/theduc"></com.airbnb.lottie.LottieAnimationView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="330dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:text="Five Minutes For Exercise"
                    android:textColor="@color/white"
                    android:textSize="28dp"
                    android:textStyle="bold">

                </TextView>

                <Button
                    android:id="@+id/btnOnclickGoSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#009688"
                    android:alpha="0.9"
                    android:text="Sign in"
                    android:textColor="#FFFFFF"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    >
                </Button>
                <Button
                    android:id="@+id/btnOnclickGoRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#009688"
                    android:alpha="0.9"
                    android:text="Register"
                    android:textColor="#FFFFFF"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    >
                </Button>
                <Button
                    android:id="@+id/signwithgg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#009688"
                    android:alpha="0.9"
                    android:drawableRight="@drawable/gg"
                    android:text="Sign in with Account Google"
                    android:textColor="#FFFFFF"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    >
                </Button>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:gravity="center"
        android:text="Create by @Hiro"
        android:textSize="14sp"
        android:layout_marginTop="40dp"
        android:textColor="#FFFFFF"
        >

    </TextView>








</LinearLayout>