<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0d2639"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/backGoHome"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_gravity="left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_gravity="center"
            android:layout_width="300dp"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/login"
            app:lottie_autoPlay="true"
            android:layout_height="200dp">

        </com.airbnb.lottie.LottieAnimationView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Login"
            android:alpha="0.9"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="normal">

        </TextView>

        <EditText
            android:id="@+id/edtgmail"
            android:padding="15dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textColorHint="@color/white"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/broder_from_edit_text"
            android:hint="Email"
            android:textStyle="bold"
            android:textColor="#F8F2F2">

        </EditText>


        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="55dp"
            android:textColorHint="@color/white"
            android:background="@drawable/broder_from_edit_text"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/text"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            >

            <TextView
                android:id="@+id/tvHoiGoFromSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:gravity="bottom"
                android:text="Don't have an account ?"
                android:textColor="@color/white">

            </TextView>

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tvOnGoFromSignUp"
                android:layout_toRightOf="@id/tvHoiGoFromSignUp"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textStyle="italic|bold"
                android:textColor="#009688"
                >

            </TextView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-230dp"
            android:layout_marginRight="15dp"
            android:alpha="0.4"
            android:background="@drawable/boder_nen_chinh"></RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnOnSignInNow"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:backgroundTint="#009688"
        android:alpha="0.9"
        android:text="Sign in"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp">
    </Button>

</LinearLayout>
