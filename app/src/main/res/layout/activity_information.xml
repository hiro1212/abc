<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d2639"
    android:orientation="vertical"
    tools:context=".CaseActivity">
    <LinearLayout
        android:layout_marginTop="-10dp"
        android:background="@drawable/border_setting"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="300dp"
            android:gravity="start"
            android:textSize="25dp"
            android:drawablePadding="10dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/tk_setting"
            android:textColor="@color/white"
            android:text="SETTING"
            android:layout_height="40dp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_setting">

        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/tk_lienhe24"
            android:drawablePadding="10dp"
            android:gravity="start"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Thông Tin Tài Khoản"
            android:textColor="@color/white"
            android:textSize="25dp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_setting">

        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/tk_danhgia"
            android:drawablePadding="10dp"
            android:gravity="start"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Đánh giá sản phẩm"
            android:textColor="@color/white"
            android:textSize="25dp">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_setting">

        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/tk_call"
            android:drawablePadding="10dp"
            android:gravity="start"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Liên hệ với chúng tôi"
            android:textColor="@color/white"
            android:textSize="25dp">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_setting">

        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/dinhvi"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/tk_lienhe24"
            android:drawablePadding="10dp"
            android:gravity="start"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Định vị vị trí của bạn"
            android:textColor="@color/white"
            android:textSize="25dp">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_setting">

        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/tk_lienhe24"
            android:drawablePadding="10dp"
            android:gravity="start"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:id="@+id/logout"
            android:text="Đăng xuất"
            android:textColor="@color/white"
            android:textSize="25dp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:id="@+id/admin_page"
        android:background="@drawable/border_setting">

        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/tk_lienhe24"
            android:drawablePadding="10dp"
            android:gravity="start"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Admin"
            android:textColor="@color/white"
            android:textSize="25dp">

        </TextView>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        app:itemIconSize="20dp"
        android:background="#009688"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_menu">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</LinearLayout>